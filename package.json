{
    "name": "React-Typescrpt-Express-Webpack-Starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm-run-all build startAll",
        "startAll": "npm-run-all --parallel startServer startWatch",
        "startServer": "./node_modules/.bin/nodemon --inspect ./dist/server.js",
        "startWatch": "./node_modules/.bin/tsc -p ./tsconfig.backend.json --watch",
        "buildBackend": "./node_modules/.bin/tsc -p ./tsconfig.backend.json",
        "buildFrontend": "./node_modules/.bin/webpack --config ./dist/webpack.config.js",
        "build": "npm-run-all buildBackend buildFrontend",
        "lint": "tslint --project tsconfig.json",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
