{
    "name": "React-Typescrpt-Express-Webpack-Starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "./node_modules/.bin/cross-env-shell PROD=false ./node_modules/.bin/npm-run-all build start:all",
        "start:prod": "./node_modules/.bin/cross-env-shell PROD=true ./node_modules/.bin/npm-run-all build start:serverProd",
        "start:all": "./node_modules/.bin/npm-run-all --parallel start:server start:watch",
        "start:server": "./node_modules/.bin/nodemon --inspect ./dist/server.js",
        "start:serverProd": "node ./dist/server.js",
        "start:watch": "./node_modules/.bin/tsc -p ./tsconfig.backend.json --watch",
        "build:backend": "./node_modules/.bin/tsc -p ./tsconfig.backend.json",
        "build:frontend": "./node_modules/.bin/webpack --config ./dist/webpack.config.js",
        "build": "./node_modules/.bin/npm-run-all lint clean build:backend build:frontend",
        "lint": "./node_modules/.bin/tslint --project ./tsconfig.json --config ./tslint.json",
        "test": "echo \"Error: no test specified\" && exit 1",
        "clean": "./node_modules/.bin/rimraf ./dist"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^6.2.0",
        "express": "^4.16.4",
        "typescript": "^3.7.5",
        "webpack": "^4.41.5"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.17.2",
        "@types/html-webpack-plugin": "^3.2.0",
        "@types/node": "^10.17.13",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "@types/webpack": "^4.41.2",
        "@types/webpack-dev-middleware": "^2.0.2",
        "@types/webpack-hot-middleware": "^2.25.0",
        "awesome-typescript-loader": "^5.2.1",
        "cross-env": "^5.2.1",
        "html-webpack-plugin": "^3.2.0",
        "nodemon": "^1.19.4",
        "npm-run-all": "^4.1.5",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "source-map-loader": "^0.2.4",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.1.0",
        "webpack-cli": "^3.3.10",
        "webpack-dev-middleware": "^3.7.2",
        "webpack-hot-middleware": "^2.24.3"
    }
}
