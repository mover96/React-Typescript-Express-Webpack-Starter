        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "typescript": "^3.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.16.0",
        "@types/html-webpack-plugin": "^3.2.0",
        "@types/react": "^16.4.11",
        "@types/react-dom": "^16.0.7",
        "@types/webpack": "^4.4.11",
        "awesome-typescript-loader": "^5.2.0",
        "html-webpack-plugin": "^3.2.0",
        "nodemon": "^1.18.3",
        "npm-run-all": "^4.1.3",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "source-map-loader": "^0.2.4",
