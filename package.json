{
    "name": "React-Typescrpt-Express-Webpack-Starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm-run-all build start:all",
        "start:prod": "npm-run-all build start:serverProd",
        "start:all": "npm-run-all --parallel start:server start:watch",
        "start:server": "./node_modules/.bin/nodemon --inspect ./dist/server.js",
        "start:serverProd": "node ./dist/server.js",
        "start:watch": "./node_modules/.bin/tsc -p ./tsconfig.backend.json --watch",
        "build:backend": "./node_modules/.bin/tsc -p ./tsconfig.backend.json",
        "build:frontend": "./node_modules/.bin/webpack --config ./dist/webpack.config.js",
        "build": "npm-run-all lint clean build:backend build:frontend",
        "lint:frontend": "tslint --project ./src/tsconfig.frontend.json",
        "lint:backend": "tslint --project ./tsconfig.backend.json",
        "lint": "npm-run-all --parallel lint:*",
        "test": "echo \"Error: no test specified\" && exit 1",
        "clean": "./node_modules/.bin/rimraf ./dist"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "typescript": "^3.0.1",
        "webpack": "^4.16.5"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/html-webpack-plugin": "^3.2.0",
        "@types/react": "^16.4.11",
        "@types/react-dom": "^16.0.7",
        "@types/webpack": "^4.4.11",
        "@types/webpack-dev-middleware": "^2.0.2",
        "@types/webpack-hot-middleware": "^2.16.4",
        "awesome-typescript-loader": "^5.2.0",
        "html-webpack-plugin": "^3.2.0",
        "nodemon": "^1.18.3",
        "npm-run-all": "^4.1.3",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "source-map-loader": "^0.2.4",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-react": "^3.6.0",
        "webpack-cli": "^3.1.0",
        "webpack-dev-middleware": "^3.1.3",
        "webpack-hot-middleware": "^2.22.3"
    }
}
